// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ==================== AUTH & USERS ====================

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  password      String
  firstName     String
  lastName      String
  phone         String?
  role          Role      @default(USER)
  isActive      Boolean   @default(true)
  avatar        String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  appointments  Appointment[]
  reviews       Review[]

  @@map("users")
}

enum Role {
  ADMIN
  STAFF
  USER
}

// ==================== SERVICES ====================

model Service {
  id               String    @id @default(uuid())
  title            String
  slug             String    @unique
  description      String
  shortDescription String?
  icon             String?
  price            Decimal   @db.Decimal(10, 2)
  priceType        PriceType @default(FIXED)
  duration         Int?      // Duration in minutes
  isActive         Boolean   @default(true)
  order            Int       @default(0)
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  // Relations
  appointments     Appointment[]
  availableSlots   AvailableSlot[]

  @@map("services")
}

enum PriceType {
  FIXED
  HOURLY
  CONSULTATION
}

// ==================== APPOINTMENTS ====================

model Appointment {
  id               String            @id @default(uuid())
  
  // Usuario registrado (opcional - para citas de usuarios logueados)
  userId           String?
  user             User?             @relation(fields: [userId], references: [id], onDelete: SetNull)
  
  // Datos del paciente (para citas públicas sin login)
  patientName      String
  patientRut       String
  patientEmail     String
  patientPhone     String?
  
  // Servicio y horario
  serviceId        String
  service          Service           @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  date             DateTime
  startTime        String            // Formato "HH:MM"
  endTime          String            // Formato "HH:MM"
  
  // Estado y metadata
  status           AppointmentStatus @default(PENDING)
  notes            String?
  address          String?
  
  // Token para cancelación (acceso sin login)
  cancelToken      String            @unique @default(uuid())
  
  // Confirmación
  confirmedAt      DateTime?
  cancelledAt      DateTime?
  cancelReason     String?
  
  // Recordatorios
  reminderSentAt   DateTime?
  
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt

  @@index([date, status])
  @@index([patientEmail])
  @@index([patientRut])
  @@index([cancelToken])
  @@map("appointments")
}

enum AppointmentStatus {
  PENDING
  CONFIRMED
  IN_PROGRESS
  COMPLETED
  CANCELLED
  NO_SHOW
}

// ==================== AVAILABLE SLOTS ====================
// Define los horarios disponibles para agendar

model AvailableSlot {
  id            String    @id @default(uuid())
  serviceId     String?   // Si es null, aplica a todos los servicios
  service       Service?  @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  
  dayOfWeek     Int       // 0 = Domingo, 1 = Lunes, ..., 6 = Sábado
  startTime     String    // Formato "HH:MM"
  endTime       String    // Formato "HH:MM"
  slotDuration  Int       @default(60) // Duración de cada slot en minutos
  maxBookings   Int       @default(1)  // Máximo de citas por slot (para servicios grupales)
  
  isActive      Boolean   @default(true)
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@map("available_slots")
}

// ==================== BLOCKED DATES ====================
// Para bloquear fechas específicas (feriados, vacaciones, etc.)

model BlockedDate {
  id            String    @id @default(uuid())
  date          DateTime
  reason        String?
  isFullDay     Boolean   @default(true)
  startTime     String?   // Si no es día completo
  endTime       String?   // Si no es día completo
  
  createdAt     DateTime  @default(now())

  @@index([date])
  @@map("blocked_dates")
}

// ==================== REVIEWS / TESTIMONIALS ====================

model Review {
  id            String    @id @default(uuid())
  userId        String?
  name          String
  role          String?
  content       String
  rating        Int       @default(5)
  isApproved    Boolean   @default(false)
  isFeatured    Boolean   @default(false)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  user          User?     @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@map("reviews")
}

// ==================== TEAM MEMBERS ====================

model TeamMember {
  id            String    @id @default(uuid())
  name          String
  position      String
  bio           String?
  image         String?
  email         String?
  phone         String?
  specialties   String[]
  isActive      Boolean   @default(true)
  order         Int       @default(0)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@map("team_members")
}

// ==================== SITE CONTENT ====================

model SiteContent {
  id            String    @id @default(uuid())
  key           String    @unique
  section       String
  title         String?
  content       Json
  order         Int       @default(0)
  isActive      Boolean   @default(true)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@map("site_content")
}

// ==================== CONTACT MESSAGES ====================

model ContactMessage {
  id            String    @id @default(uuid())
  name          String
  email         String
  phone         String?
  subject       String?
  message       String
  isRead        Boolean   @default(false)
  createdAt     DateTime  @default(now())

  @@map("contact_messages")
}

// ==================== SETTINGS ====================

model Setting {
  id            String    @id @default(uuid())
  key           String    @unique
  value         Json
  description   String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@map("settings")
}
