// This is your Prisma schema file

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  password      String
  firstName     String
  lastName      String
  phone         String?
  role          Role      @default(USER)
  isActive      Boolean   @default(true)
  avatar        String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  appointments  Appointment[]
  reviews       Review[]
  @@map("users")
}

enum Role {
  ADMIN
  STAFF
  USER
}

enum ResourceType {
  ENFERMERA
  CHOFER
}

enum AppointmentType {
  LOCAL
  DOMICILIO
}

model Service {
  id               String       @id @default(uuid())
  title            String
  slug             String       @unique
  description      String
  shortDescription String?
  icon             String?
  price            Decimal      @db.Decimal(10, 2)
  priceType        PriceType    @default(FIXED)
  duration         Int?
  resourceType     ResourceType @default(ENFERMERA)
  isActive         Boolean      @default(true)
  order            Int          @default(0)
  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @updatedAt
  appointments     Appointment[]
  availableSlots   AvailableSlot[]
  @@map("services")
}

enum PriceType {
  FIXED
  HOURLY
  CONSULTATION
}

model Appointment {
  id               String            @id @default(uuid())
  userId           String?
  user             User?             @relation(fields: [userId], references: [id], onDelete: SetNull)
  patientName      String
  patientRut       String
  patientEmail     String
  patientPhone     String?
  serviceId        String
  service          Service           @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  date             DateTime
  startTime        String
  endTime          String
  resourceType     ResourceType      @default(ENFERMERA)
  appointmentType  AppointmentType   @default(LOCAL)
  status           AppointmentStatus @default(PENDING)
  notes            String?
  address          String?
  cancelToken      String            @unique @default(uuid())
  confirmedAt      DateTime?
  cancelledAt      DateTime?
  cancelReason     String?
  reminderSentAt   DateTime?
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  @@index([date, status])
  @@index([date, resourceType, status])
  @@index([patientEmail])
  @@index([patientRut])
  @@index([cancelToken])
  @@map("appointments")
}

enum AppointmentStatus {
  PENDING
  CONFIRMED
  IN_PROGRESS
  COMPLETED
  CANCELLED
  NO_SHOW
}

model AvailableSlot {
  id            String        @id @default(uuid())
  serviceId     String?
  service       Service?      @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  resourceType  ResourceType  @default(ENFERMERA)
  dayOfWeek     Int
  startTime     String
  endTime       String
  slotDuration  Int           @default(60)
  maxBookings   Int           @default(1)
  isActive      Boolean       @default(true)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  @@map("available_slots")
}

model BlockedDate {
  id            String        @id @default(uuid())
  date          DateTime
  reason        String?
  resourceType  ResourceType?
  isFullDay     Boolean       @default(true)
  startTime     String?
  endTime       String?
  createdAt     DateTime      @default(now())
  @@index([date])
  @@index([date, resourceType])
  @@map("blocked_dates")
}

model Review {
  id            String    @id @default(uuid())
  userId        String?
  name          String
  role          String?
  content       String
  rating        Int       @default(5)
  isApproved    Boolean   @default(false)
  isFeatured    Boolean   @default(false)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  user          User?     @relation(fields: [userId], references: [id], onDelete: SetNull)
  @@map("reviews")
}

model TeamMember {
  id            String    @id @default(uuid())
  name          String
  position      String
  bio           String?
  image         String?
  email         String?
  phone         String?
  specialties   String[]
  isActive      Boolean   @default(true)
  order         Int       @default(0)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  @@map("team_members")
}

model SiteContent {
  id            String    @id @default(uuid())
  key           String    @unique
  section       String
  title         String?
  content       Json
  order         Int       @default(0)
  isActive      Boolean   @default(true)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  @@map("site_content")
}

model ContactMessage {
  id            String    @id @default(uuid())
  name          String
  email         String
  phone         String?
  subject       String?
  message       String
  isRead        Boolean   @default(false)
  createdAt     DateTime  @default(now())
  @@map("contact_messages")
}

model Setting {
  id            String    @id @default(uuid())
  key           String    @unique
  value         Json
  description   String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  @@map("settings")
}